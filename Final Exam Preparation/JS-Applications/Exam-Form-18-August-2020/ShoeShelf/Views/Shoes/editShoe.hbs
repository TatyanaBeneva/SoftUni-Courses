{{> header}}
<h1>Edit Offer</h1>
<p class="message"></p>
<form method="POST" action="#/edit/{{id}}"> 
    <div>
        <input name="name" type="text" placeholder="Name..." value={{name}}>
    </div>
    <div>
        <input name="price" type="text" placeholder="Price..." value={{price}}>
    </div>
    <div>
        <input name="imageUrl" type="text" placeholder="Image url..." value={{imageUrl}}>
    </div>
    <div>
        <textarea name="description" placeholder="Give us some description about this offer...">{{description}}</textarea>
    </div>
    <div>
        <input name="brand" type="text" placeholder="Brand..." value={{brand}}>
    </div>
    <div>
        <button>Edit</button>
    </div>
</form>
{{> footer}}